<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/fileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/fileCardExtended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorCard"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="user"
                            android:padding="8dp"
                            android:src="@drawable/ic_account_white_24dp"
                            android:tint="?attr/colorText"
                            android:transitionName="image" />

                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:text="username"
                            android:textColor="?attr/colorText"
                            android:maxLength="20"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:text="1 Jan 1970 at 0:00"
                            android:singleLine="true"
                            android:textColor="?attr/colorText"
                            android:alpha="0.6"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/share"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:padding="8dp"
                                android:layout_alignParentEnd="true"
                                android:background="@color/transparent"
                                android:contentDescription="share"
                                android:src="@drawable/ic_share_white_24dp"
                                android:tint="?attr/colorText"
                                tools:ignore="UnusedAttribute" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorTitle"
                        android:textSize="17sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="?attr/colorSecondary"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="preview"
                        android:src="@drawable/placeholder" />

                    <RelativeLayout
                        android:id="@+id/videoBlock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:visibility="gone">

                        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                            android:id="@+id/videoPreview"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <LinearLayout
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/likeIcon"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="likes"
                                android:padding="8dp"
                                android:src="@drawable/ic_like_white_24dp"
                                android:tint="@color/colorActionIcon" />

                            <TextView
                                android:id="@+id/likeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="@color/colorActionIcon"
                                android:layout_marginEnd="14dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/commentsIcon"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="comments"
                                android:padding="8dp"
                                android:src="@drawable/ic_comment_white_24dp"
                                android:tint="@color/colorActionIcon" />

                            <TextView
                                android:id="@+id/commentsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="@color/colorActionIcon"
                                android:layout_marginEnd="14dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/downloadIcon"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="downloads"
                                android:padding="8dp"
                                android:src="@drawable/ic_download_white_24dp"
                                android:tint="@color/colorActionIcon" />

                            <TextView
                                android:id="@+id/downloadCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="@color/colorActionIcon"
                                android:layout_marginEnd="14dp" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true">

                                <ImageView
                                    android:id="@+id/viewsIcon"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:contentDescription="views"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_views_white_24dp"
                                    android:tint="@color/colorActionIcon" />

                                <TextView
                                    android:id="@+id/viewsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/colorActionIcon"
                                    android:layout_marginEnd="8dp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/downloadBtnBlock"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/downloadBtn"
                    android:layout_width="160dp"
                    android:layout_height="36dp"
                    android:text="@string/download_btn"
                    android:elevation="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/fileLoader"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fileError"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_error"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_error_white_24dp"
            android:tint="?attr/colorText"
            android:alpha="0.8"
            android:contentDescription="@string/file_not_found" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorSecondary"
            android:text="@string/file_not_found"
            android:layout_centerInParent="true"
            android:layout_below="@+id/ic_error" />

    </RelativeLayout>

</LinearLayout>
